<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculadora LTDA</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <link rel="stylesheet" href="/css/app.css">
    <script src="/js/sendRequest.js"></script>
    <script src="/js/form.js"></script>
    <script src="/js/calculadora.js"></script>

</head>
<body>

    <script>

        var tkn = '<%=token%>';
        
        if(tkn == undefined || tkn == null || tkn == ''){
            alert('Acesso não autorizado!!!');
            window.location.href = '/inicio';
        }

    </script>

    <div class="container dv-calculadora">
        
        <h1>Calculadora LTDA - Realização de Cálculos</h1>
        
        <hr>

        <input type="hidden" id="tkn" name="token" value="<%=token%>" class="campos">
        <input type="hidden" id="id" name="idUsuario" value="<%=idUsuario%>" class="campos">

        <div class="mb-3 row">
            <label for="txtNomeCalculo" class="col-sm-2 col-form-label">Nome Cálculo</label>
            <div class="col-sm-10">
                <input type="text" name="nomeCalculo" class="form-control campos" id="txtNomeCalculo" autofocus="on">
            </div>
        </div>        

        <div class="mb-3 row">
            <label for="txtValor1" class="col-sm-2 col-form-label">Valor 1</label>
            <div class="col-sm-10">
                <input type="number" step="0.01" name="valor1" class="form-control campos" id="txtValor1">
            </div>
        </div>        

        <div class="mb-3 row">
            <label for="sctTipo" class="col-sm-2 col-form-label">Operação</label>
            <div class="col-sm-10">
                <select name="tipo" class="form-control campos" id="sctTipo">
                    <option value=""></option>
                    <option value="adi">Adição</option>
                    <option value="sub">Subtração</option>
                    <option value="mul">Multiplicação</option>
                    <option value="div">Divisão</option>
                </select>
            </div>
        </div>        

        <div class="mb-3 row">
            <label for="txtValor2" class="col-sm-2 col-form-label">Valor 2</label>
            <div class="col-sm-10">
                <input type="number" step="0.01" name="valor2" class="form-control campos" id="txtValor2">
            </div>
        </div>        

        <div class="mb-3 row">
            <div class="btn-group">
                <button id="btnCancelar" class="btn btn-secondary" type="button">Cancelar e Sair</button>
                <button id="btnCalcular" class="btn btn-secondary" type="button">Calcular</button>
            </div>
        </div>

        <div class="alert-secondary mt-3" id="dv-resultado">
            
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>
</html>